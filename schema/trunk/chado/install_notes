perl Makefile.PL   
     #creates AutoDBI.pm 
make
     #moves AutoDBI.pm to blib
make test_load
     #creates database, installs schema
perl load/Build.PL load_conf=load/etc/load.conf
     #creates Build (part of Module::Build)
./Build
     #to move the just created LoadDBI.pm to blib
     # edit load/etc/load.conf and load/etc/initialize.sql
./Build prepdb
     #inserts a few useful items into fundamental chado tables
rm -rf /tmp/chado_load/*
./Build ontologies
     #gets and installs various ontologies
     #edit lib/Chado/LoadDBI.pm to remove Autocommit
load/bin/load_gff3.pl --organism Human --srcdb DB:refseq --gfffile refseq.gff
     #loads gff file
